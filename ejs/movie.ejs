

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>ejs movie</title>
	 <link href="../css/bootstrap.css" " rel="stylesheet">
	 <link href="../css/main.css" rel="stylesheet">
	 <style type="text/css">
	 	
	 </style>
</head>
<body>
	<% include header %>

	<div class="container">
		<div class="row">
			<div class="col-md-10">
				<h2>Movie Details</h2>
					
				<% if ( movie ) { %>
					<ul class="panel">
					
							
								<div class="panel panel-default">
									<div class="panel-heading"><a href="/movie/<%= movie._id%>"><%= movie.title %> <span>(<%= movie.year %>)</span></a></div>
									<div class="panel-body">
									<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
											<a rel="<%= movie.imdbID %>" href="#" class="thumbnail movie_details">
												<img src="<%= movie.poster %>" alt="">
											</a>
										</div>
									<p>Director: <%= movie.director %></p>
									<p><%= movie.plot %></p>
									<p><%= movie.genere %></p>
									</div>
								</div>
								
							

					</ul>
								<a href="/movie " class="btn btn-primary details">Movie List</a>
								<button rel="<%= movie._id %>" class="btn btn-primary delete">Delete</button>
								<a href="./<%= movie._id %>/edit" class="btn btn-primary edit">edit</a>
								<% for (var i =0; i < movie.likeUsers.length; i++) { %> 
									<% if ( movie.likeUsers[i] == session_user._id) { %>
										<% var lkdUder =  movie.likeUsers[i] %>
									<% } %>																
								<% } %>								
								<% if (lkdUder) { %>
									<button class="btn btn-primary liked">liked </button>
								<% } else { %>
									<button rel="/movie/<%= movie._id %>/user" class="btn btn-primary likes">like</button>
								<% } %>
				<% } %>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-md-10">
				<ul>
				<h2>User Who like the movie</h2>
				<% if(user) { %> <br>

				<% for(var i= 0 ; i < user.length; i++ ) { %>
					<li class="avater_container">
						<a class="avater_small" href="../user/<%=user[i]._id %>"><img src="<%= user[i].avater %>"></a>
						<a href="../user/<%=user[i]._id %>"><%= user[i].name %></a>
						<p> </p>
					</li>
					<% } %>
					<br>
				<% } %>
				</ul>
			</div>
		</div>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-md-10">
				<ul>
				<h2>User Who already Watch the movie</h2>
				<% if(movie.viewedUser) { %> <br>

				<% for(var i= 0 ; i < movie.viewedUser.length; i++ ) { %>
					<li class="avater_container">
						<a class="avater_small" href="../user/<%=user[i]._id %>"><img src="<%= movie.viewedUser[i].avater %>"></a>
						<a href="../user/<%=user[i]._id %>"><%= movie.viewedUser[i].name %></a>
						<p> </p>
					</li>
					<% } %>
					<br>
				<% } %>
				</ul>
			</div>
		</div>
	</div>
	
	<script type="text/javascript" src= "../js/vendor/jquery-1.11.2.js" ></script>
	<script type="text/javascript" src= "../js/script.js" ></script>
</body>
</html>
